{
  "compilerOptions": {
    "module": "commonjs",
    // "target": "es5",
    "target": "es2015",
    "lib": [
      "es5",
      "es2016",
      "dom"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "public/js",
    "assets/app/polyfills.ts",
    "**/*.spec.ts"
  ]
}